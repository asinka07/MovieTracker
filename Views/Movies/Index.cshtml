@model IEnumerable<MovieTracker.Models.Movie>
@section Styles {
    <link rel="stylesheet" href="~/css/movies.css" />
}
    
@{
    ViewData["Title"] = "Movies";
}

<h1 class="mb-5">Movies</h1>

<a asp-action="Create" class="btn btn-dark mb-4">
    + Add Movie
</a>

<div class="movies-grid">
    @foreach (var movie in Model)
    {
        @await Html.PartialAsync("_MoviePartialView", movie)
    }
</div>
